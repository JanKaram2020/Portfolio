{
  "name": "tony-portfolio-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:next": "next dev",
    "dev:uno": "unocss '*/**/*.tsx' '*/**/*.mdx' --out-file=globals.css --watch",
    "dev": "concurrently 'yarn dev:next' 'yarn dev:uno'",
    "build": "unocss '*/**/*.tsx' --out-file=globals.css && next build",
    "start": "next start",
    "lint": "next lint",
    "postbuild": "next-sitemap",
    "test": "vitest run",
    "test:watch": "vitest run -w",
    "test:update": "vitest run -u",
    "vercel-build": "yum install libuuid-devel libmount-devel zlib && cp /lib64/{libuuid,libmount,libblkid,libz}.so.1 node_modules/canvas/build/Release/ && yarn build"
  },
  "dependencies": {
    "@hbsnow/rehype-sectionize": "^1.0.7",
