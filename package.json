    "@types/js-cookie": "^3.0.6",
    "@types/mdx": "^2.0.12",
    "@types/node": "15.6.1",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@types/react-test-renderer": "^18.0.3",
    "@unocss/postcss": "^0.56.5",
    "@unocss/transformer-variant-group": "^0.56.5",
    "@unocss/webpack": "^0.56.5",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "babel-eslint": "10.1.0",
    "concurrently": "^8.2.2",
    "dompurify": "^3.2.1",
    "jsdom": "^22.1.0",
    "next-sitemap": "^1.6.148",
    "postcss": "^8.4.31",
    "prettier": "^3.2.5",
    "react-test-renderer": "^18.2.0",
    "sass": "^1.77.6",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.4.5",
    "unocss": "^0.58.5",
    "vite": "^5.1.5",
